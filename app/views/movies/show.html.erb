<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @movie.image.url(:medium) %>
        <div class="star-rating" data-score= <%= @avg_review %> ></div>
        <em><%= "#{@reviews.length} reviews" %></em>
        <div class="table-responsive">
          <table class="table">
            <tbody class="gumb"> 
            <tr>
              <td><strong>Ime in Priimek:</strong></td>
              <td><%= @movie.title %></td>
            </tr>
            <tr>
              <td><strong>Opis:</strong></td>
              <td><%= @movie.description %></td>
            </tr>
            <tr>
              <td>  <strong>Višina:</strong></td>
                <td>  <%= @movie.movie_lenght %></td>
            </tr>
            <tr>
            <td><strong>Starost:</strong> </td>
            <td><%= @movie.director %></td>
            </tr>
            <tr>
              <td><strong>Ocena:</strong></td>
              <td> <%= @movie.rating %></td>
            </tr>
            </tbody>
          </table>
    <p class="gumb">       <%= link_to "Napiši kritiko", new_movie_review_path(@movie) %></p>
        </div>
      </div>
     <div class="col-md-7 col-md-offset-1">
       <h1 class="review_title"><%= @movie.title %></h1>
       <p><%= @movie.description %></p>
       
       <% if @reviews.blank? %> 
       <h3>Ni se ocen, bi rad ocenil prvi?!?!?</h3>
      <%= link_to "Write Review", new_movie_review_path(@movie), class: "btn btn-danger" %> 
       <% else %> 
       <% @reviews.each do |review| %> 
             <div class="reviews">
              <div class="star-rating" data-score= <%= review.rating %> ></div>
              <p ><%= review.comment %></p>
            </div>
          <% end %> 
          <% end %> 
     </div>
    </div>
   <p class="gumb">   <%= link_to 'Uredi', edit_movie_path(@movie) %> </p>
<p class="gumb"><%= link_to 'Nazaj', movies_path %></p>
  </div>
  

</div>

<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>


